rule download:
    output:
        contigs=expand(os.path.join(OUTDIR_RAW, DATASETS, "{sample}_contigs.fasta"), sample=SAMPLES.get(DATASETS, [])),
        reads=expand(os.path.join(OUTDIR_RAW, DATASETS, "{sample}_reads.fq.gz"), sample=SAMPLES.get(DATASETS, []))
    conda:
        "envs/cami2_processing.yml"
    shell:
        """
        python {SRC_DIR}/get_cami2_data.py {DATASETS} {sample_str}
        """



rule concatenate:
    input:
        expand(os.path.join(OUTDIR_RAW, DATASETS, "{sample}_contigs.fasta"), sample=SAMPLES.get(DATASETS, []))
    output:
        os.path.join(OUTDIR_PROCESSED, DATASETS, "catalogue.fna.gz")
    conda:
        "envs/vamb.yml"
    shell:
        """
        python {SRC_DIR}/concatenate.py {output} {input}
        """


rule alignment:
    input:
        read=os.path.join(OUTDIR_RAW, DATASETS, "{sample}_reads.fq.gz"),
        catalogue=os.path.join(OUTDIR_PROCESSED, DATASETS, "catalogue.fna.gz")
    output:
        os.path.join(OUTDIR_PROCESSED, DATASETS, "{sample}_sorted.bam")
    threads:
        96
    conda:
        "envs/cami2_processing.yml"
    shell:
        """
        strobealign -t {threads} {input.catalogue} {input.read} | samtools sort -o {output}
        """




#VAMB
rule vamb:
    input:
        catalogue=os.path.join(OUTDIR_PROCESSED, DATASETS, "catalogue.fna.gz"),
        bams=expand(os.path.join(OUTDIR_PROCESSED, DATASETS, "{sample}_sorted.bam"), sample=SAMPLES.get(DATASETS, []))
    output:
        os.path.join(OUTDIR_MODEL_RESULTS, DATASETS, "vamb_output")
    conda:
        "envs/cami2_processing.yml"
    shell:
        """
        vamb bin default --outdir {output} --fasta {input.catalogue} --bamfiles {input.bams}
        """

rule move_cluster_outputs_vamb:
    input:
        model_outputs=os.path.join(OUTDIR_MODEL_RESULTS, DATASETS, "vamb_output")
    output:
        cluster_results=directory(os.path.join(OUTDIR_MODEL_RESULTS, DATASETS, "vamb_postprocess"))
    conda:
        "envs/cami2_processing.yml"
    shell:
        """
        python {SRC_DIR}/move_cluster_outputs_vamb.py {output.cluster_results} {input.model_outputs}
        """

rule create_fasta_bins_vamb:
    input:
        catalogue=os.path.join(OUTDIR_PROCESSED, DATASETS, "catalogue.fna.gz"),
        cluster_results=os.path.join(OUTDIR_MODEL_RESULTS, DATASETS, "vamb_postprocess", "vamb_output_clusters.tsv")
    output:
        dirs=directory(os.path.join(OUTDIR_MODEL_RESULTS, DATASETS, "fasta_bins", "vamb"))
    params:
        minsize_bins = MINSIZE_BINS
    conda: 
        "envs/vamb.yml"
    shell:
        """
        python {SRC_DIR}/create_fasta.py {input.catalogue} {input.cluster_results} {params.minsize_bins} {output.dirs}
        """
#END VAMB


#TAXVAMB
rule metabuli:
    input:
        catalogue=os.path.join(OUTDIR_PROCESSED, DATASETS, "catalogue.fna.gz")
    output:
        database = os.path.join(OUTDIR_MODEL_RESULTS, DATASETS, "metabuli", "gtdb_database"),  
        database_tmp = os.path.join(OUTDIR_MODEL_RESULTS, DATASETS, "metabuli", "gtdb_database_tmp"), 
        results = os.path.join(OUTDIR_MODEL_RESULTS, DATASETS, "metabuli", "metabuli_results")   
    params:
        seq_mode=1,
        job_id=100

    shell:
        """
        wget https://mmseqs.com/metabuli/metabuli-linux-avx2.tar.gz; tar xvzf metabuli-linux-avx2.tar.gz; export PATH=$(pwd)/metabuli/bin/:$PATH 
        metabuli databases GTDB {output.database} {output.database_tmp}
        metabuli classify --seq-mode {params.seq_mode} {input.catalogue} {output.database}/gtdb {output.results} {params.job_id}
        """

rule taxconverter:
    input:
        input_dir = os.path.join(OUTDIR_MODEL_RESULTS, DATASETS, "metabuli", "metabuli_results")
    output:
        result = os.path.join(OUTDIR_MODEL_RESULTS, DATASETS, "taxconverter", "result.tsv")
    conda:
        "envs/taxconverter.yml"
    params:
        lineage_zip="https://github.com/RasmussenLab/taxconverter/raw/7f5ff980612dc59d3290b5ddfe97eb814e96c42f/data/lineage.zip",
        lineage_dir="taxconverter/data"
    shell:
        """
        git clone git@github.com:RasmussenLab/taxconverter.git
        cd taxconverter
        pip install -e .

        curl -L -o {params.lineage_dir}/lineage.zip "{params.lineage_zip}"
        unzip -o {params.lineage_dir}/lineage.zip -d {params.lineage_dir}

        taxconverter metabuli -c {input.input_dir}/100_classifications.tsv -r {input.input_dir}/100_report.tsv -o {output.result}
        """

rule taxvamb:
    input:
        catalogue=os.path.join(OUTDIR_PROCESSED, DATASETS, "catalogue.fna.gz"),
        bams=expand(os.path.join(OUTDIR_PROCESSED, DATASETS, "{sample}_sorted.bam"), sample=SAMPLES.get(DATASETS, [])),
        taxonomy=os.path.join(OUTDIR_MODEL_RESULTS, DATASETS, "taxconverter", "result.tsv")
    output:
        os.path.join(OUTDIR_MODEL_RESULTS, DATASETS, "taxvamb_output")
    conda:
        "envs/cami2_environment.yml"
    shell:
        """
        vamb bin taxvamb --outdir {output} --fasta {input.catalogue} --bamfiles {input.bams} --taxonomy {input.taxonomy}
        """


rule move_cluster_outputs_taxvamb:
    input:
        model_outputs=os.path.join(OUTDIR_MODEL_RESULTS, DATASETS, "taxvamb_output")
    output:
        cluster_results=directory(os.path.join(OUTDIR_MODEL_RESULTS, DATASETS, "taxvamb_postprocess"))
    conda:
        "envs/cami2_processing.yml"
    shell:
        """
        python {SRC_DIR}/move_cluster_outputs_vamb.py {output.cluster_results} {input.model_outputs}
        """

rule create_fasta_bins_taxvamb:
    input:
        catalogue=os.path.join(OUTDIR_PROCESSED, DATASETS, "catalogue.fna.gz"),
        cluster_results=os.path.join(OUTDIR_MODEL_RESULTS, DATASETS, "taxvamb_postprocess", "vamb_output_clusters.tsv")
    output:
        dirs=directory(os.path.join(OUTDIR_MODEL_RESULTS, DATASETS, "fasta_bins", "taxvamb"))
    params:
        minsize_bins = MINSIZE_BINS
    conda: 
        "envs/vamb.yml"
    shell:
        """
        python {SRC_DIR}/create_fasta.py {input.catalogue} {input.cluster_results} {params.minsize_bins} {output.dirs}
        """
#END TAXVAMB


#COMEBIN
rule comebin:
    input:
        catalogue=expand(os.path.join(OUTDIR_PROCESSED, DATASETS, "catalogue.fna.gz")),
        bams=expand(os.path.join(OUTDIR_PROCESSED, DATASETS, "{sample}_sorted.bam"), sample=SAMPLES.get(DATASETS, []))
    output:
        os.path.join(OUTDIR_MODEL_RESULTS, DATASETS, "comebin_output")
    params:
        views=6,
        threads=48
    conda:
        "envs/comebin_environment.yml"
    shell:
        """
        bash run_comebin.sh -a {input.catalogue} -p {input.bams} -o {output} -n {params.views} -t {params.threads}
        """

rule postprocess_cluster_outputs_comebin:
    input:
        model_outputs=os.path.join(OUTDIR_MODEL_RESULTS, DATASETS, "comebin_output", "comebin_res", "comebin_res_bins")
    output:
        cluster_fasta=directory(os.path.join(OUTDIR_MODEL_RESULTS, DATASETS, "fasta_bins", "comebin"))
    params:
        minsize_bins = 250000
    conda:
        "envs/cami2_processing.yml"
    shell:
        """
        python {SRC_DIR}/postprocess_cluster_outputs_comebin.py {output.cluster_fasta} {input.model_outputs} {params.minsize_bins}
        """
#END COMEBIN




rule checkm2:
    input:
        fasta_bins=expand(os.path.join(OUTDIR_MODEL_RESULTS, DATASETS, "fasta_bins", "{model}"), model=MODEL)
    output:
        output=directory(expand(os.path.join(OUTDIR_MODEL_RESULTS, DATASETS, "checkm2", "{model}_results"), model=MODEL))
    conda:
        "envs/checkm2.yml"
    threads:
        128
    shell:
        """
        checkm2 predict --threads {threads} --input {input.fasta_bins} --output-directory {output.output}
        """







